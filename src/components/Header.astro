---
import { FRONT_URL, SITE_TITLE } from '../consts';
import HeaderLink from './HeaderLink.astro';
import ThemeToggle from './ThemeToggle.astro';
---

<header
	class="bg-accent fixed top-0 px-4 h-16 w-full z-50 backdrop-blur-md dark:bg-background/60 border-b shadow-sm"
>
	<nav class="flex justify-between text-foreground items-center h-full">
		<h2 class="text-4xl font-bold"><a href="/">{SITE_TITLE}</a></h2>
		<div class="flex justify-between items-center gap-4 flex-1 max-w-1/3">
			<HeaderLink href="/">Institucional</HeaderLink>
			<HeaderLink href="/pd&i">Blog</HeaderLink>
			<HeaderLink href="/about">PD&I</HeaderLink>
			<HeaderLink href={FRONT_URL}>Benchmark</HeaderLink>
		</div>
		<ThemeToggle />
	</nav>
</header>
